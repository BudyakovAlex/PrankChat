<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PrankChat.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/inactive</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="android:windowBackground">@color/applicationWhite</item>
        <item name="android:navigationBarColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/applicationBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorControlHighlight">@color/accent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>

        <!-- TextEdit Hint Color Workaround-->
        <item name="colorControlNormal">@color/applicationWhite</item>
        <item name="colorControlActivated">@color/applicationWhite</item>
    </style>

    <style name="Theme.PrankChat.Base.Dark" parent="Theme.PrankChat.Base">
        <!-- TextEdit Hint Color Workaround-->
        <item name="colorControlNormal">@color/border</item>
        <item name="colorControlActivated">@color/border</item>
        <item name="colorControlNormal">@color/border</item>
        <item name="colorPrimary">@color/border</item>
        <item name="colorPrimaryDark">@color/border</item>
        <item name="colorPrimaryDark">@color/border</item>
    </style>

    <style name="Theme.PrankChat.Splash" parent="Theme.PrankChat.Base">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Theme.PrankChat.Translucent" parent="Theme.PrankChat.Base.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.PrankChat.TabLayout" parent="Theme.PrankChat.Base">
        <item name="tabSelectedTextColor">@color/accent</item>
        <item name="tabTextColor">@color/inactive</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PrankChat.MainTabLayout" parent="Theme.PrankChat.TabLayout">
        <item name="android:textSize">12dp</item>
        <item name="tabPaddingTop">9dp</item>
        <item name="tabPaddingBottom">9dp</item>
    </style>

    <style name="Theme.PrankChat.Publication.TabLayout" parent="Theme.PrankChat.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/text_item_tab</item>
        <item name="tabTextColor">@color/text_item_tab</item>
        <item name="tabTextAppearance">@style/Theme.PrankChat.Tab</item>
    </style>

    <style name="Theme.PrankChat.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Theme.PrankChat.TextFieldLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:colorAccent">#fff</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="Theme.PrankChat.TextFieldLayout.Dark" parent="Theme.PrankChat.TextFieldLayout">
        <item name="boxStrokeColor">@color/border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/dark_placeholder</item>
        <item name="android:colorAccent">@color/dark_placeholder</item>
        <item name="colorAccent">@color/dark_placeholder</item>
    </style>

    <style name="Theme.PrankChat.TextField" parent="Theme.PrankChat.Base">
        <item name="colorControlNormal">@color/applicationWhite</item>
        <item name="colorControlActivated">@color/applicationWhite</item>
    </style>

    <style name="Theme.PrankChat.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/border_grey</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="Theme.PrankChat.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.PrankChat.Button.White" parent="Theme.PrankChat.Button">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@color/applicationWhite</item>
    </style>

    <style name="Theme.PrankChat.Button.Accent" parent="Theme.PrankChat.Button">
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:background">@drawable/button_accent_background</item>
    </style>

    <style name="Theme.PrankChat.Button.Borderless" parent="Theme.PrankChat.Button.White">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@drawable/button_white_bordered_background</item>
    </style>

    <style name="Theme.PrankChat.TextView.ProfileView.ValueLabel" parent="Theme.PrankChat.Base">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.PrankChat.TextView.ProfileView.TitleLabel" parent="Theme.PrankChat.Base">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Theme.PrankChat.ProgressBar.Accent" parent="Theme.PrankChat.Base">
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Theme.PrankChat.ProgressBar.White" parent="Theme.PrankChat.Base">
        <item name="android:indeterminateTint">@color/applicationWhite</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Theme.PrankChat.DateDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.PrankChat.ShareDialogStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="Theme.PrankChat.DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">65%</item>
        <item name="windowFixedWidthMinor">65%</item>
    </style>

    <style name="Theme.PrankChat.Button.SelectableStyle" parent="Theme.PrankChat.Button">
        <item name="android:background">@drawable/selectable_button_selector</item>
        <item name="android:textColor">@color/selectable_button_color_states</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>
</resources>