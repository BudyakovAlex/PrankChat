<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_back_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CircleCachedImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:MvxBind="ImagePath ProfilePhotoUrl; Click ChangeProfilePhotoCommand; PlaceholderText ProfileShortName, Mode = OneTime" />

            <TextView
                android:id="@+id/text_view_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/ProfileUpdateView_PhotoChange_Title"
                android:textColor="@android:color/white"
                app:MvxBind="Click ChangeProfilePhotoCommand" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ProfileUpdateView_Email_Placeholder"
                    android:textColorHint="@color/applicationWhite"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/applicationWhite"
                        android:textSize="14dp"
                        app:MvxBind="Text Email" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/update_warning_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="3dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_warning"
                    app:srcCompat="@drawable/ic_warning" />
            </FrameLayout>

            <TextView
                android:id="@+id/resend_confirmation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Profile_Resend_Confirmation"
                android:textColor="@color/applicationWhite"
                android:textSize="14dp"
                tools:text="Отправить повторно" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:hint="@string/ProfileUpdateView_Login_Placeholder"
                android:textColorHint="@color/applicationWhite"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/applicationWhite"
                    android:textSize="14dp"
                    app:MvxBind="Text Login" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/ProfileUpdateView_Name_Placeholder"
                android:textColorHint="@color/applicationWhite"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:textColor="@color/applicationWhite"
                    android:textSize="14dp"
                    app:MvxBind="Text Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/ProfileUpdateView_Description_Placeholder"
                android:textColorHint="@color/applicationWhite"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/applicationWhite"
                    android:textSize="14dp"
                    app:MvxBind="Text Description" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:textColor="@color/border"
                android:textSize="12dp"
                app:MvxBind="Text LimitTextPresentation;"
                tools:text="10/100" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border_white"
                app:MvxBind="Click SelectBirthdayCommand">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:gravity="center_vertical"
                    android:text="@string/ProfileUpdateView_Birthday_Placeholder"
                    android:textColor="@color/applicationWhite"
                    android:textSize="14dp"
                    app:MvxBind="Text BirthdayText;" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/ic_calendar"
                    app:srcCompat="@drawable/ic_calendar" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/ProfileUpdateView_GenderSelect_Title"
                android:textColor="@color/applicationWhite"
                android:textSize="14dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:button="@null"
                    android:drawableTop="@drawable/radio_button_background"
                    android:padding="10dp"
                    android:text="@string/RegistrationView_Male_Button"
                    android:textColor="@color/applicationWhite"
                    app:MvxBind="Click SelectGenderCommand, CommandParameter=Male; Checked IsGenderMale" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:button="@null"
                    android:drawableTop="@drawable/radio_button_background"
                    android:padding="10dp"
                    android:text="@string/RegistrationView_Female_Button"
                    android:textColor="@color/applicationWhite"
                    app:MvxBind="Click SelectGenderCommand, CommandParameter=Female; Checked IsGenderFemale" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registration_button"
                    style="@style/Theme.PrankChat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/ProfileUpdateView_Button_Save"
                    app:MvxBind="Click SaveProfileCommand" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Theme.PrankChat.ProgressBar.Accent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/registration_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    app:MvxBind="Visibility Visibility(IsBusy)" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="@string/ProfileUpdateView_ChangePassword"
                android:textColor="@android:color/white"
                app:MvxBind="Click ChangePasswordCommand" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>