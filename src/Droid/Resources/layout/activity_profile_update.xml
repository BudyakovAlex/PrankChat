<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_back_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <CircleCachedImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:MvxBind="ImagePath ProfilePhotoUrl; Click ChangeProfilePhotoCommand; PlaceholderText ProfileShortName, Mode = OneTime"/>
            <TextView
                android:id="@+id/text_view_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ProfileUpdateView_PhotoChange_Title"
                android:textColor="@android:color/white"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                app:MvxBind="Click ChangeProfilePhotoCommand"/>
            <FrameLayout
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeWidth="1dp"
                android:textColorHint="@color/applicationWhite"
                android:hint="@string/ProfileUpdateView_Email_Placeholder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/applicationWhite"
                    android:singleLine="true"
                    app:MvxBind="Text Email" />
            </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/update_warning_image"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/ic_warning"/>
            </FrameLayout>
            <TextView
                android:id="@+id/resend_confirmation_text_view"
                tools:text="Отправить повторно"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="end"
                android:layout_marginEnd="18dp"
                android:text="@string/Profile_Resend_Confirmation"
                android:textColor="@color/applicationWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:boxStrokeWidth="1dp"
                android:textColorHint="@color/applicationWhite"
                android:hint="@string/ProfileUpdateView_Login_Placeholder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/applicationWhite"
                    android:singleLine="true"
                    app:MvxBind="Text Login" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:boxStrokeWidth="1dp"
                android:textColorHint="@color/applicationWhite"
                android:hint="@string/ProfileUpdateView_Name_Placeholder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/applicationWhite"
                    android:singleLine="true"
                    app:MvxBind="Text Name" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:boxStrokeWidth="1dp"
                android:textColorHint="@color/applicationWhite"
                android:hint="@string/ProfileUpdateView_Description_Placeholder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/applicationWhite"
                    app:MvxBind="Text Description" />
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/border_white"
                app:MvxBind="Click SelectBirthdayCommand">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/applicationWhite"
                    android:text="@string/ProfileUpdateView_Birthday_Placeholder"
                    app:MvxBind="Text BirthdayText;" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/ic_calendar"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/applicationWhite"
                android:textSize="14sp"
                android:text="@string/ProfileUpdateView_GenderSelect_Title"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:textColor="@color/applicationWhite"
                    android:drawableTop="@drawable/radio_button_background"
                    android:button="@null"
                    android:text="@string/RegistrationView_Male_Button"
                    app:MvxBind="Click SelectGenderCommand, CommandParameter=Male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:drawableTop="@drawable/radio_button_background"
                    android:button="@null"
                    android:textColor="@color/applicationWhite"
                    android:text="@string/RegistrationView_Female_Button"
                    app:MvxBind="Click SelectGenderCommand, CommandParameter=Female"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp">
                <Button
                    android:id="@+id/registration_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp"
                    android:text="@string/ProfileUpdateView_Button_Save"
                    style="@style/Theme.PrankChat.Button.White"
                    app:MvxBind="Click SaveProfileCommand" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/registration_button"
                    android:layout_alignRight="@+id/registration_button"
                    android:layout_alignEnd="@+id/registration_button"
                    style="@style/Theme.PrankChat.ProgressBar.Accent"
                    app:MvxBind="Visibility Visibility(IsBusy)"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/text_view_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="@string/ProfileUpdateView_ChangePassword"
                android:textColor="@android:color/white"
                app:MvxBind="Click ChangePasswordCommand"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout> 