<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_back_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

	<View
		android:id="@+id/decore_view"
		android:layout_width="3dp"
		android:layout_height="48dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/action_bar"/>

	<TextView
		android:id="@+id/prize_pool_text_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintTop_toTopOf="@id/decore_view"
		app:layout_constraintStart_toEndOf="@id/decore_view"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:id="@+id/left_to_distribute_text_view"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintTop_toBottomOf="@id/prize_pool_text_view"
		app:layout_constraintBottom_toBottomOf="@id/decore_view"
		app:layout_constraintStart_toEndOf="@id/decore_view"
		app:layout_constraintEnd_toEndOf="parent"/>

	<ScrollView
		android:id="@+id/content_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="18dp"
		app:layout_constraintTop_toBottomOf="@id/decore_view"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/warning_text_view">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<mvvmcross.droidx.recyclerview.MvxRecyclerView
				android:id="@+id/content_recycler_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:nestedScrollingEnabled="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>

			<LinearLayout
				android:id="@+id/add_place_linear_layout"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:orientation="horizontal"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@id/content_recycler_view">

				<ImageView
					android:layout_width="18dp"
					android:layout_height="18dp"
					android:src="@drawable/ic_add_place_participant"
					android:layout_gravity="center_vertical"/>

				<TextView
					android:id="@+id/add_place_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#F0864E"
					tools:text="some text"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="4dp"/>

			</LinearLayout>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>

	<Button
		android:id="@+id/apply_button"
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_marginStart="80dp"
		android:layout_marginEnd="80dp"
		android:layout_marginBottom="16dp"
		android:layout_marginTop="8dp"
		style="@style/Theme.PrankChat.Button.Accent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
		android:id="@+id/warning_text_view"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:textColor="#D45149"
		tools:text="some text"
		android:gravity="center_vertical"
		app:layout_constraintVertical_bias="1"
		app:layout_constraintTop_toBottomOf="@id/content_scroll_view"
		app:layout_constraintBottom_toTopOf="@id/apply_button"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>