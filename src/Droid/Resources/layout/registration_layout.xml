<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/enter_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Регистрация" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:boxStrokeWidth="1dp"
        android:textColorHint="@color/applicationWhite"
        android:layout_below="@+id/enter_text_view"
        android:hint="@string/LoginView_Email_Placeholder"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/applicationWhite"
            app:MvxBind="Text EmailText" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/login_from_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/email_edit_text"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:text="@string/LoginView_AltLogin_Title" />
    <LinearLayout
        android:id="@+id/social_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_below="@+id/login_from_text">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="Registration"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_vk"
            app:MvxBind="Click LoginCommand, CommandParameter=Gmail" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_odnoklassniki"
            app:MvxBind="Click LoginCommand, CommandParameter=Ok" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_facebook"
            app:MvxBind="Click LoginCommand, CommandParameter=Facebook" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_gmail"
            app:MvxBind="Click LoginCommand, CommandParameter=Gmail" />
    </LinearLayout>
    <TextView
        android:id="@+id/create_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/applicationWhite"
        android:textSize="16sp"
        android:gravity="center"
        android:autoLink="all"
        android:layout_below="@+id/social_container"
        android:text="Уже зарегистрированы? Войти в аккаунт"
        app:MvxBind="Click RegistrationCommand" />
    <Button
        android:id="@+id/registration_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/create_account_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:stateListAnimator="@null"
        android:textColor="@color/accent"
        android:background="@drawable/button_white_background"
        android:text="@string/LoginView_Continue_Button"
        style="@style/Theme.PrankChat.Button"
        app:MvxBind="Click ShowSecondStepCommand" />
    <FrameLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>