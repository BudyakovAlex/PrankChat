<?xml version="1.0" encoding="utf-8"?>
<mvvmcross.droidx.MvxSwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/applicationWhite"
	app:MvxBind="Refreshing IsUpdatingData; RefreshCommand UpdateDataCommand">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:MvxBind="Visibility Visibility(IsAttachDocumentAvailable)">
                <View
                    android:id="@+id/verify_user_separator"
                    android:layout_width="3dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/verify_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verify_user_separator"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Verify_User_Text"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/verify_user_separator"
                    android:text="@string/WithdrawalView_Attach_File"
                    style="@style/Theme.PrankChat.Button.Accent"
                    app:MvxBind="Click AttachFileCommand" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:MvxBind="Visibility Visibility(IsDocumentPending)">
                <View
                    android:id="@+id/pendng_verify_user_separator"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/pendng_verify_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Pendng_Verify_User_Text"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:MvxBind="Visibility Visibility(IsWithdrawalAvailable)">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/saved_credit_card_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/WithdrawalView_Card_Number"
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:MvxBind="Visibility Invisible(IsPresavedWithdrawalAvailable)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack"
                        android:drawableLeft="@drawable/ic_card"
                        android:focusable="false"
                        android:cursorVisible="true"
                        app:MvxBind="Text CurrentCardNumber; Click OpenCardOptionsCommand" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_card_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/WithdrawalView_Card_Number"
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:MvxBind="Visibility InvertedInvisible(IsPresavedWithdrawalAvailable)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_card_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack"
                        android:drawableLeft="@drawable/ic_card"
                        app:MvxBind="Text CardNumber" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/surname_name"
                    app:layout_constraintTop_toBottomOf="@+id/credit_card_text"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/WithdrawalView_Name"
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:MvxBind="Visibility InvertedVisibility(IsPresavedWithdrawalAvailable)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        app:MvxBind="Text Name" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/surname_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/credit_card_text"
                    app:layout_constraintLeft_toRightOf="@+id/name_text"
                    android:layout_marginStart="8dp"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/WithdrawalView_Surname"
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:MvxBind="Visibility InvertedVisibility(IsPresavedWithdrawalAvailable)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        app:MvxBind="Text Surname" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/withdrawal_cost_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/withdrawal_button"
                    app:layout_constraintTop_toBottomOf="@+id/name_text"
                    android:layout_marginRight="16dp"
                    app:boxStrokeWidth="1dp"
                    android:gravity="right|center_vertical"
                    android:hint="@string/WithdrawalView_Cost"
                    android:textColorHint="@color/dark_placeholder"
                    style="@style/Theme.PrankChat.TextFieldLayout.Dark">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_cost_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textAlignment="viewEnd"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack"
                        app:MvxBind="Text Price(Cost)" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/withdrawal_button"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/withdrawal_cost_edit_text"
                    app:layout_constraintBottom_toBottomOf="@+id/withdrawal_cost_edit_text"
                    android:text="@string/CashboxView_Withdrawal_Button"
                    style="@style/Theme.PrankChat.Button.Accent"
                    app:MvxBind="Click WithdrawCommand" />
                <View
                    android:id="@+id/withdrawal_vertical_separator"
                    android:layout_width="3dp"
                    android:layout_height="36dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintTop_toBottomOf="@id/withdrawal_cost_edit_text"
                    android:layout_marginTop="26dp"
                    app:layout_constraintHorizontal_bias="0"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/withdrawal_available_amount_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="wrap"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintLeft_toRightOf="@id/withdrawal_vertical_separator"
                    app:layout_constraintRight_toLeftOf="@id/withdrawal_question_image"
                    app:layout_constraintTop_toTopOf="@id/withdrawal_vertical_separator"
                    app:layout_constraintBottom_toBottomOf="@id/withdrawal_vertical_separator"
                    app:layout_constraintVertical_bias="0.5"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text AvailableForWithdrawal" />
                <ImageView
                    android:id="@+id/withdrawal_question_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintLeft_toRightOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintBottom_toBottomOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/ic_question_black"
                    android:src="@drawable/ic_question_black" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:MvxBind="Visibility Visibility(IsWithdrawalPending)">
                <View
                    android:id="@+id/pending_withdrawal_vertical_separator"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/pending_withdrawal_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginTop="26dp"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/pending_withdrawal_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="wrap"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintLeft_toRightOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintBottom_toBottomOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintVertical_bias="0.5"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Pending_Withdrawal_Text"/>
                <TextView
                    android:id="@+id/pending_withdrawal_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_vertical_separator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_date_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Create_Date"/>
                <TextView
                    android:id="@+id/pending_withdrawal_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_date_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_date_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text CreateAtWithdrawal" />
                <View
                    android:id="@+id/pending_withdrawal_date_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_date_title"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/pending_withdrawal_cost_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_date_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_cost_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Cost"/>
                <TextView
                    android:id="@+id/pending_withdrawal_cost_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_cost_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_cost_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_cost_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text AmountValue" />
                <View
                    android:id="@+id/pending_withdrawal_cost_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_cost_title"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/pending_withdrawal_status_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_cost_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_status_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Status_Text"/>
                <TextView
                    android:id="@+id/pending_withdrawal_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_status_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_status_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_status_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/WithdrawalView_Pending"/>
                <View
                    android:id="@+id/pending_withdrawal_status_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_status_title"
                    android:layout_marginTop="10dp"
                    android:text="@string/WithdrawalView_Pending"/>
                <Button
                    android:id="@+id/cancel_withdrawal_button"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_status_line"
                    android:layout_marginTop="16dp"
                    android:text="@string/WithdrawalView_Withdraw_Text"
                    style="@style/Theme.PrankChat.Button.Accent"
                    app:MvxBind="Click CancelWithdrawCommand" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <FrameLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_below="@id/action_bar"
		    android:background="@color/applicationTransparent"
		    app:MvxBind="Visibility Visibility(IsBusy)">
		    <com.airbnb.lottie.LottieAnimationView
			    android:id="@+id/animation_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    app:lottie_fileName="ripple_animation.json"
			    app:lottie_loop="true"
			    app:lottie_autoPlay="true" />
	    </FrameLayout>
    </FrameLayout>
</mvvmcross.droidx.MvxSwipeRefreshLayout>