<?xml version="1.0" encoding="utf-8"?>
<mvvmcross.droidx.MvxSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/applicationWhite"
    android:id="@+id/swipe_refresh">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">
            <RelativeLayout
                android:id="@+id/attach_document_container_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/verify_user_separator"
                    android:layout_width="3dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/verify_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verify_user_separator"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/NeedToConfirmYourIdentity"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/attach_document_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/verify_user_separator"
                    android:text="@string/AttachFile"
                    app:backgroundTint="@color/accent" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/pending_document_container_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:id="@+id/pendng_verify_user_separator"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/pendng_verify_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/PendingVerifyUser"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/withdrawal_container_view">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/saved_credit_card_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/EnterWalletNumber"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/current_card_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_yoomoney_account"
                        android:focusable="false"
                        android:cursorVisible="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_card_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/EnterWalletNumber"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_card_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_yoomoney_account" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/surname_text"
                    app:layout_constraintTop_toBottomOf="@+id/credit_card_text"
                    android:layout_marginTop="12dp"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/Name"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/surname_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/credit_card_text"
                    app:layout_constraintLeft_toRightOf="@+id/name_text"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:boxStrokeWidth="1dp"
                    android:textColorHint="@color/dark_placeholder"
                    android:hint="@string/Surname"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/surname_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/withdrawal_cost_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/withdrawal_button"
                    app:layout_constraintTop_toBottomOf="@+id/name_text"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    app:boxStrokeWidth="1dp"
                    android:gravity="right|center_vertical"
                    android:hint="@string/Amount"
                    android:textColorHint="@color/dark_placeholder"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_cost_text_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textAlignment="viewEnd"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/applicationBlack" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/withdrawal_button"
                    android:layout_width="110dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/withdrawal_cost_edit_text"
                    app:layout_constraintBottom_toBottomOf="@+id/withdrawal_cost_edit_text"
                    android:text="@string/TakeOff"
                    style="@style/Theme.PrankChat.Button.Accent"
                    app:backgroundTint="@color/accent" />

                <View
                    android:id="@+id/withdrawal_vertical_separator"
                    android:layout_width="3dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="26dp"
                    android:background="@color/accent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintTop_toBottomOf="@id/withdrawal_cost_edit_text" />
                <TextView
                    android:id="@+id/withdrawal_available_amount_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/withdrawal_vertical_separator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/withdrawal_vertical_separator"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/applicationBlack"
                    tools:text="@string/CommisionWarning"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/withdrawal_yoomoney_description_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toEndOf="@id/withdrawal_vertical_separator"
                    app:layout_constraintTop_toBottomOf="@id/withdrawal_available_amount_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="23dp"
                    android:textColor="@color/applicationBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="14dp"
                    tools:text="@string/WithdrawalYoomoneyDescription"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pending_withdrawal_container_view">
                <View
                    android:id="@+id/pending_withdrawal_vertical_separator"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/pending_withdrawal_text"
                    android:layout_marginTop="26dp"
                    android:background="@color/accent" />
                <TextView
                    android:id="@+id/pending_withdrawal_text"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="wrap"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintLeft_toRightOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintBottom_toBottomOf="@id/pending_withdrawal_vertical_separator"
                    app:layout_constraintVertical_bias="0.5"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/PendingWithdrawal"/>
                <TextView
                    android:id="@+id/pending_withdrawal_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_vertical_separator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_date_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/DateOfCreation"/>
                <TextView
                    android:id="@+id/pending_withdrawal_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_date_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_date_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp" />
                <View
                    android:id="@+id/pending_withdrawal_date_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_date_title"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/pending_withdrawal_cost_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_date_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_cost_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/Amount"/>
                <TextView
                    android:id="@+id/pending_withdrawal_cost_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_cost_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_cost_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_cost_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"/>
                <View
                    android:id="@+id/pending_withdrawal_cost_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_cost_title"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/pending_withdrawal_status_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_cost_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pending_withdrawal_status_value"
                    android:layout_marginTop="36dp"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/Status"/>
                <TextView
                    android:id="@+id/pending_withdrawal_status_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/pending_withdrawal_status_title"
                    app:layout_constraintBottom_toBottomOf="@+id/pending_withdrawal_status_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pending_withdrawal_status_title"
                    android:gravity="right"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    android:text="@string/Pending"/>
                <View
                    android:id="@+id/pending_withdrawal_status_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/applicationBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_status_title"
                    android:layout_marginTop="10dp"
                    android:text="@string/Pending"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_withdrawal_button"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pending_withdrawal_status_line"
                    android:layout_marginTop="16dp"
                    android:text="@string/Revoke"
                    style="@style/Theme.PrankChat.Button.Accent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/loading_overlay"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
            tools:visibility="gone"
		    android:layout_below="@id/action_bar"
		    android:background="@color/applicationTransparent">
		    <com.airbnb.lottie.LottieAnimationView
			    android:id="@+id/animation_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    app:lottie_fileName="ripple_animation.json"
			    app:lottie_loop="true"
			    app:lottie_autoPlay="true" />
	    </FrameLayout>
    </FrameLayout>
    </ScrollView>
</mvvmcross.droidx.MvxSwipeRefreshLayout>