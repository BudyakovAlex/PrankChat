<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/shadow"
    android:translationZ="5dp"
    app:elevation="25dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="@color/applicationWhite"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <PrankChat.Mobile.Droid.Controls.ClearEditText
            android:id="@+id/search_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_search_dark"
            android:drawablePadding="14dp"
            android:hint="@string/Search"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:singleLine="true"
            android:textColor="@color/applicationBlack"
            android:textColorHint="@color/applicationTransparent" />

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>