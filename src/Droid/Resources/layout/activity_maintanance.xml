<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/deep_purple"
    xmlns:android="http://schemas.android.com/apk/res/android">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/applicationWhite"
    android:gravity="center_horizontal"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="53dp"
    android:textSize="14dp"
    android:text="@string/Application_New_Version_Ready"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_maintanance"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/download_button"
        style="@style/Theme.PrankChat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="16dp"
        android:text="@string/Download_Update" />
</FrameLayout>