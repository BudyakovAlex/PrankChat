<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/applicationWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/action_bar_back_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/cashbox_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        style="@style/Theme.PrankChat.Publication.TabLayout">
        <com.google.android.material.tabs.TabItem
            android:text="@string/Replenishment" />
        <com.google.android.material.tabs.TabItem
            android:text="@string/Withdrawal" />
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/cashbox_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>