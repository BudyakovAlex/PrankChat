<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/applicationWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TabLayout
        android:id="@+id/cashbox_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        style="@style/Theme.PrankChat.Publication.TabLayout">
        <android.support.design.widget.TabItem
            android:text="@string/CashboxView_Fillup_Tab" />
        <android.support.design.widget.TabItem
            android:text="@string/CashboxView_Withdrawal_Tab" />
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/cashbox_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>