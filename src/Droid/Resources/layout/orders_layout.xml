<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            app:MvxBind="Click OpenFilterCommand">
            <TextView
                android:id="@+id/filter_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="17dp"
                android:textColor="@color/filter"
                android:textSize="14sp"
                app:MvxBind="Text ActiveFilterName"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/filter_button_title"
                android:src="@drawable/ic_filter_arrow" />
        </LinearLayout>
    </RelativeLayout>
    <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
        android:id="@+id/publication_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:MvxItemTemplate="@layout/cell_order"
        app:MvxBind="ItemsSource Items"/>
</LinearLayout>