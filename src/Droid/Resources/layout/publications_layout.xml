<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/publication_type_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
		style="@style/Theme.PrankChat.Publication.TabLayout">
        <android.support.design.widget.TabItem
            android:text="@string/Popular_Publication_Tab" />
        <android.support.design.widget.TabItem
            android:text="@string/Actual_Publication_Tab" />
        <android.support.design.widget.TabItem
            android:text="@string/MyFeed_Publication_Tab" />
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            app:MvxBind="Click OpenFilterCommand">
            <TextView
                android:id="@+id/filter_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="17dp"
                android:textColor="@color/filter"
                android:textSize="14dp"
                app:MvxBind="Text ActiveFilterName"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/filter_button_title"
                android:src="@drawable/ic_filter_arrow"
                app:srcCompat="@drawable/ic_filter_arrow"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator" />
    <MvxSwipeRefreshLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:MvxBind="Refreshing IsBusy; RefreshCommand ReloadItemsCommand">
        <PrankChat.Mobile.Droid.Controls.EndlessRecyclerView
            android:id="@+id/publication_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </MvxSwipeRefreshLayout>
</LinearLayout>
