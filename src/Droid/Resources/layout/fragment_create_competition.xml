<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="32dp"
                android:paddingRight="16dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_name"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Name"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_description"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Description"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_collection_bids_from"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/CollectionBidsFrom"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/collection_bids_from_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_collection_bids_to"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/CollectionBidsFor"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/collection_bids_to_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:textColor="@color/applicationBlack"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_voting_from"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/VotingFrom"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voting_from_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_voting_to"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/VotingFor"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voting_to_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_prize_pool"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:hint="@string/PrizePool"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prize_pool_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_participation_fee"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:hint="@string/ParticipationFee"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/participation_fee_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_percent_participation_fee"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:hint="@string/PercentageContributionPrizePool"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/percent_participation_fee_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginTop="26dp">
				<CheckBox
                    android:id="@+id/create_contest_check_box"
					android:layout_width="wrap_content"
					android:layout_height="18dp"
					android:layout_marginTop="1dp"
					android:layout_marginLeft="-5dp"
					android:buttonTint="@color/accent"
					android:gravity="left|center_vertical"
					android:layout_gravity="center_vertical"
					android:text="@string/SecretContest"
					android:textColor="@color/applicationBlack"
					android:textSize="14dp"/>
				<ImageView
                    android:id="@+id/description_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:tint="@color/description"
					android:src="@drawable/ic_info"
                    android:scaleType="center"/>
			</LinearLayout>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/create_contest_button"
				style="@style/Theme.PrankChat.Button.Accent"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="32dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:text="@string/CreateContest"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
