<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="32dp"
                android:paddingRight="16dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_name"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/create_competition_text_input_description"
                    android:hint="@string/Name"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_description"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_name"
                    android:hint="@string/Description"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_collection_bids_from"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_description"
                    app:layout_constraintRight_toLeftOf="@id/create_competition_text_input_collection_bids_to"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:hint="@string/CollectionBidsFrom"
                    android:layout_marginTop="26dp"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/collection_bids_from_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_collection_bids_to"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@id/create_competition_text_input_collection_bids_from"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_description"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="@string/CollectionBidsFor"
                    android:layout_marginTop="26dp"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/collection_bids_to_input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:textColor="@color/applicationBlack"
                            android:textSize="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_voting_from"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_collection_bids_from"
                    app:layout_constraintRight_toLeftOf="@id/text_input_voting_to"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:hint="@string/VotingFrom"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voting_from_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_voting_to"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@id/create_competition_text_input_voting_from"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_collection_bids_to"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="16dp"
                    android:hint="@string/VotingFor"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voting_to_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_prize_pool"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_voting_from"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/PrizePool"
                    android:layout_marginTop="22dp"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prize_pool_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_participation_fee"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_prize_pool"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/ParticipationFee"
                    android:layout_marginTop="21dp"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/participation_fee_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_competition_text_input_percent_participation_fee"
                    android:theme="@style/Theme.PrankChat.TextFieldLayout.Dark"
                    app:boxStrokeColor="@color/border"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_participation_fee"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="right|center_vertical"
                    android:hint="@string/PercentageContributionPrizePool"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/dark_placeholder"
                    app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/percent_participation_fee_input_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="viewEnd"
                        android:maxLines="1"
                        android:textColor="@color/applicationBlack"
                        android:textSize="14dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                    android:id="@+id/create_contest_check_box"
					android:layout_width="wrap_content"
					android:layout_height="18dp"
					android:layout_marginTop="27dp"
					android:layout_marginLeft="-5dp"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_percent_participation_fee"
					android:buttonTint="@color/accent"
					android:gravity="left|center_vertical"
					android:layout_gravity="center_vertical"
					android:text="@string/SecretContest"
					android:textColor="@color/applicationBlack"
					android:textSize="14dp"/>

			<ImageView
                    android:id="@+id/description_image_view"
                    android:layout_width="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="40dp"
					android:layout_marginLeft="10dp"
                    android:layout_marginBottom="35dp"
                    app:layout_constraintTop_toBottomOf="@id/create_competition_text_input_percent_participation_fee"
                    app:layout_constraintStart_toEndOf="@id/create_contest_check_box"
					android:tint="@color/description"
					android:src="@drawable/ic_info"
                    android:scaleType="center"/>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/create_contest_button"
				style="@style/Theme.PrankChat.Button.Accent"
				android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/create_contest_check_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
				android:layout_height="36dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="32dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
                android:layout_marginBottom="20dp"
				android:text="@string/CreateContest"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>
