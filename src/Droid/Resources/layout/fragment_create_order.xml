<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="32dp"
            android:paddingRight="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_order_text_input_name"
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/CreateOrderView_Name_Placeholder"
                android:textColorHint="@color/dark_placeholder"
                app:boxStrokeWidth="1dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text Title" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/CreateOrderView_Description_Placeholder"
                android:textColorHint="@color/dark_placeholder"
                app:boxStrokeWidth="1dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/order_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:minLines="3"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text Description" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Theme.PrankChat.TextFieldLayout.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="right|center_vertical"
                android:hint="@string/CreateOrderView_PriceTitle_Placeholder"
                android:textColorHint="@color/dark_placeholder"
                app:boxStrokeWidth="1dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/create_order_price_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/applicationBlack"
                    android:textSize="14dp"
                    app:MvxBind="Text Price(Price)" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_grey"
                android:drawableRight="@drawable/ic_calendar_accent"
                android:gravity="center_vertical"
                android:hint="@string/CreateOrderView_CompleteDate_Placeholder"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="@color/applicationBlack"
                android:textColorHint="@color/dark_placeholder"
                android:textSize="14dp"
                app:MvxBind="Text ActiveFor.Title; Click ShowDateDialogCommand;" />
            <!--TODO: Hide executor functionality not implemented. -->
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="26dp"
                android:buttonTint="@color/accent"
                android:gravity="left|center_vertical"
                android:text="@string/CreateOrderView_HideExecutor_Button"
                android:textColor="@color/applicationBlack"
                android:textSize="14dp"
                app:MvxBind="Checked IsExecutorHidden" />

            <Button
                android:id="@+id/create_button"
                style="@style/Theme.PrankChat.Button.Accent"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/CreateOrderView_Create_Button"
                app:MvxBind="Click CreateCommand" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:background="@color/applicationTransparent"
        app:MvxBind="Visibility Visibility(IsBusy)">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ripple_animation.json"
            app:lottie_loop="true" />
    </FrameLayout>
</FrameLayout>