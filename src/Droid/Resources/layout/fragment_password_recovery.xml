<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_back_and_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/enter_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="@string/Password_Recovery_View_Title" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:boxStrokeWidth="1dp"
        android:textColorHint="@color/applicationWhite"
        android:hint="@string/Password_Recovery_View_Email_Placeholder"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/applicationWhite"
            app:MvxBind="Text Email" />
    </android.support.design.widget.TextInputLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/registration_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Password_Recovery_View_Recovery_Button"
            style="@style/Theme.PrankChat.Button.Borderless"
            app:MvxBind="Click RecoverPasswordCommand" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/create_button"
            android:layout_alignRight="@+id/create_button"
            android:layout_alignEnd="@+id/create_button"
            style="@style/Theme.PrankChat.ProgressBar.Accent"
            app:MvxBind="Visibility Visibility(IsBusy)"/>
    </FrameLayout>
</LinearLayout>