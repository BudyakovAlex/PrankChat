<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@drawable/gradient_background">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_back_and_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/applicationWhite"
        android:textSize="14sp"
        android:text="@string/Password_Recovery_View_Attention"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/applicationWhite"
        android:textSize="14sp"
        android:text="@string/Password_Recovery_View_Finish_Text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="@string/FinishPasswordRecoveryView_GoToLogin_Button"
        style="@style/Theme.PrankChat.Button.Borderless"
        app:MvxBind="Click ShowLoginCommand" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@color/applicationWhite"
        android:textSize="16sp"
        android:gravity="center"
        android:autoLink="all"
        android:text="@string/FinishPasswordRecoveryView_GoToFeed_Button"
        app:MvxBind="Click ShowPublicationCommand" />
</LinearLayout>
